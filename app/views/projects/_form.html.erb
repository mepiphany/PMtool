<%= @project.errors.full_messages.join(" ") %>

<%= simple_form_for @project do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :due_date %>
  <%= f.input :image, multiple: true, hint: "jpg, jpeg, gif, png" %>
  <%= f.input :file, as: :file, hint: "pdf, doc, txt, html" %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
