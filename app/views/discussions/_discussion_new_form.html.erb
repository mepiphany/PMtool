<%= @discussion.errors.full_messages.join(", ") %>

<%= form_for [@project, @discussion], remote: true do |f|  %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>
