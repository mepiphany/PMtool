<%= form_for [discussion, Comment.new] do |f| %>
  <div>
    <%= f.label :body  %>
    <%= f.text_area :body %>
  </div>
  <%= f.submit %>

<% end %>

<h3>Comments</h3>
<% discussion.comments.each do |comment| %>
<p><%= comment.body %></p>
<%= link_to "Edit", edit_discussion_comment_path(discussion, comment)  %>
<%= button_to "Delete", discussion_comment_path(discussion, comment), method: :delete %>
<% end %>
